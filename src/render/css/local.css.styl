div.box.alt
  & .underlay
    position: absolute
    transform: translate(-50%, -50%)
    z-index: 5
  & .overlay
    position: absolute
    transform: translate(-50%, -50%)
    z-index: 10

ul.copyright
  margin-top: 0 !important
  display: inline-block !important
  & li
    display: block !important
ul.icons.qcif
  text-align: center !important
div.qcif.image
  display: inline-block !important
  & li
    padding-left: 5px !important
    padding-right: 5px !important
    & img.icon.qcif
      max-width: 50%
      max-height: 50%

#navmenu-accordion
  .dropdown, .dropdown-menu, .panel-group, .panel, .panel-heading, .panel-collapse, .panel-body
    background-color: transparent
  .panel
    vertical-align: top
    margin-top:5px
    border: none
  .panel-heading
    padding-left: 0 !important
  .panel-title
    vertical-align: middle !important
    padding-left: 10px
    padding-right: 10px
    text-align: left
    font-weight: bold
  .panel-body
    padding-left: 10px
    padding-right: 10px
    border-radius: 4px
    border: 1px solid
    div
      line-height: 2em
      text-align: left
      font-weight: bold

@media screen and (min-width: 980px)
  #navmenu-accordion
    .panel
      display inline-block
  body.generic
    #navmenu-accordion
      .panel-title
      .panel-body
      div a
        background-color: #383b43 !important
        color: #ffffff !important
@media screen and (max-width: 979px)
  #navmenu-accordion
    .panel
      display block
