div.box.alt
  & .underlay
    position: absolute
    transform: translate(-50%, -50%)
    z-index: 5
  & .overlay
    position: absolute
    transform: translate(-50%, -50%)
    z-index: 10

#banner
  max-height: 500px !important

ul.copyright
  margin-top: 0 !important
  display: inline-block !important
  & li
    display: block !important
ul.icons.qcif
  text-align: center !important
div.qcif.image
  display: inline-block !important
  & li
    padding-left: 5px !important
    padding-right: 5px !important
    & img.icon.qcif
      max-width: 50%
      max-height: 50%

menuLinkColor = rgba(255, 255, 255, 0.5)
menuLinkHoverColor = #fff

#navmenus
  .dropdown, .dropdown-menu, .panel-group, .panel, .panel-heading, .panel-collapse, .panel-body
    background-color: transparent
  .panel
    vertical-align: top
    margin-top:5px
    border: none
  .panel-heading
    text-align: left !important
    margin: 5px 25px 10px 5px
    padding: 0
  .panel-title
    vertical-align: middle !important
    margin: 0
    padding-left: 0
    padding-right: 0
    text-align: left
    font-weight: bold
    a
      text-decoration: none
      color: menuLinkColor
      &:hover
        color: menuLinkHoverColor
  .panel-collapse
    width: 170% !important
    margin: 0
    -webkit-transition: height .15s ease-in-out
    -o-transition: height .15s ease-in-out
    transition: height .15s ease-in-out
    .panel-body
      padding-left: 5px
      padding-right: 0
      margin-right: -60px
      margin-left: 0
      width: 8em
      border-radius: 4px
      border: none
      background-color: #000
      .menuitem
      .menuitem p
        margin: 0
        padding: 0
        display: block
        line-height: 2em
        text-align: left
        font-weight: bold
        a
          @extend #navmenus .panel-title a
#nav
  width 100%

.navbar-header.logo
  position absolute !important
  transform translate(0, 10%)
  @media screen and (max-width: 450px)
    img
      height 80px
      width 80px

#collapseDocumentation
  .panel-body
    width: 10em !important

&:hover
  text-decoration: none !important

shadow = 1px 1px 5px #999

#one .row a
  color #000
  &:hover section.box
    border solid 1px #CCC
    -moz-box-shadow shadow
    -webkit-box-shadow shadow
    box-shadow shadow

@media screen and (min-width: 980px)
  #navmenus
    .panel
      display inline-block
  body.generic
    #navmenus
      .panel-body
        border: 1px solid !important
        background-color: #383b43 !important
        color: #ffffff !important
      .panel-title
      .menuitem p a
        @extend #navmenus .panel-title a
        background-color: #383b43 !important

@media screen and (max-width: 979px)
  #navmenus
    .panel
      display block
    .panel-body
      position: relative !important
