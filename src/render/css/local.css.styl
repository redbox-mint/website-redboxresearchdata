div.box.alt
  & .underlay
    position: absolute
    transform: translate(-50%, -50%)
    z-index: 5
  & .overlay
    position: absolute
    transform: translate(-50%, -50%)
    z-index: 10

ul.copyright
  margin-top: 0 !important
  display: inline-block !important
  & li
    display: block !important
ul.icons.qcif
  text-align: center !important
div.qcif.image
  display: inline-block !important
  & li
    padding-left: 5px !important
    padding-right: 5px !important
    & img.icon.qcif
      max-width: 50%
      max-height: 50%

#navmenus
  .dropdown, .dropdown-menu, .panel-group, .panel, .panel-heading, .panel-collapse, .panel-body
    background-color: transparent
  .panel
    vertical-align: top
    margin-top:5px
    border: none
  .panel-heading
    text-align: left !important
    margin: 5px 45px 10px 5px
    padding: 0
  .panel-title
    vertical-align: middle !important
    margin: 0
    padding-left: 0
    padding-right: 0
    text-align: left
    font-weight: bold
    a
      text-decoration: none
  .panel-collapse
    margin: 0
    .panel-body
      padding-left: 5px
      padding-right: 0
      margin-right: -50px
      margin-left: 0
      width: 8em !important
      border-radius: 4px
      border: solid 1px
      background-color: #000
      .menuitem
      .menuitem p
        margin: 0
        padding: 0
        display: block
        line-height: 2em
        text-align: left
        font-weight: bold

@media screen and (min-width: 980px)
  #navmenus
    .panel
      display inline-block
  body.generic
    #navmenus
      .panel-title
      .panel-body
      .menuitem a
        background-color: #383b43 !important
        color: #ffffff !important
@media screen and (max-width: 979px)
  #navmenus
    .panel
      display block
    .panel-body
      position: relative !important
