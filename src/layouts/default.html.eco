<html lang="en">
	<head>
		<title><%= @getPreparedTitle() %></title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<%- @getBlock("scripts").add(["js/jquery.min.js" ,"js/skel.min.js","js/skel-layers.min.js","js/init.js","js/local.js"]).toHTML() %>
  	<%- @getBlock("styles").add(["css/skel.css","css/style.css","css/style-xlarge.css", "css/local.css","css/redbox.css"]).toHTML() %>
	</head>
	<body class="landing">
		<!-- Header -->
			<header id="header">
				<nav id="nav">
					<ul>
			      <% for page in @getCollection("pages").toJSON(): %>
			          <li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
			              <a href="<%= @getUrl(page) %>">
			                  <%= page.title %>
			              </a>
			          </li>
			      <% end %>
			    </ul>
				</nav>
			</header>
		<!-- Banner -->
			<section id="banner">
				<h2><%= @getHeading1() %></h2>
				<p><%= @getHeading2() %></p>
				<ul class="actions">
					<li>
						<a href="#" class="image"><img src="images/RedBox_Logo_Box_Small.png" alt="Redbox logo" width="120px" height="120px" /></a>
					</li>
				</ul>
			</section>
		<!-- One -->
			<section id="one" class="wrapper style1 special">
				<div class="container">
					<header class="major">
						  <%- @content %>
					</header>
					<div class="row 150%">
						<% for document in @getCollection("indexrow").toJSON(): %>
			          <%- document.contentRendered %>
			      <% end %>
					</div>
				</div>
			</section>

					<!-- Footer -->
						<footer id="footer">
							<div class="container">
								<div class="row">
									<div class="8u 12u$(medium)">
										<ul class="copyright">
											<li>&copy; 2017 Queensland Cyberinfrastructure Foundation. All rights reserved</li>
											 <li>Design: <a href="http://templated.co">TEMPLATED</a></li>
											<li>Images: <a href="http://unsplash.com">Unsplash</a></li>
										</ul>
									</div>
									<div class="4u$ 12u$(medium)">
										<ul class="icons">
											<li>
												<a href="https://twitter.com/researchdatabox" class="icon rounded fa-twitter"><span class="label">Twitter</span></a>
											</li>
										</ul>
									</div>
								</div>
							</div>
						</footer>

	</body>
</html>
